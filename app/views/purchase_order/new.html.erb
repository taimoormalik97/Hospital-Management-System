<%= form_for @purchase_order, url: {action: :create} do |f| %> 
  <div class="container  pt-3"> 
      <div class="card">
        <div class="card-header p-3 container-fluid">
          <div class="row">
            <h3 class="col-md-9">
              <%= t('purchase_order.add_order_label') %>
            </h3> 
          </div>
        </div> 
        <div class="card-body"> 
          <p><%= flash[:error] %></p>   
          <p>   
            <div class="form-group">   
              <label><%= t('purchase_order.name_label') %></label>   
              <%= f.text_field :vendorname, :required => true, class: "form-control" %>   
            </div>   
            <div class="form-group">   
              <label><%= t('purchase_order.price_label') %></label>   
              <%= f.number_field :price, :required => true, class: "form-control" %>   
            </div>   
            <div class="form-group">   
              <label><%= t('purchase_order.state_label') %></label>   
              <%= f.select :state, options_for_select(['drafted']), { prompt: true, selected: 'drafted' }, required: true %> 
            </div>    
          </p>
        </div> 
      </div>
      <div class="card-footer p-3 container-fluid">
        <div class="row d-flex justify-content-md-end">
          <div>   
            <%= link_to t('back'), { controller: 'purchase_order', action: 'index'}, class: "btn btn-secondary" %>   
            <%= f.submit t('create'), class: "btn btn-primary"%>   
          </div> 
        </div>
      </div>    
    </div>    
  </div>
<% end %>     
