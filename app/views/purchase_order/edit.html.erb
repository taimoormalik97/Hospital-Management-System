<div class="container">   
  
  <%= form_for @purchase_order, url: {action: :update} do |f| %>   
  
  <h3>Add Order</h3>         
  <div class="container">   
    <label>Vendor Name</label>   
    <%= f.text_field :vendorname %>   
  </div>   
  
  <div class="container" id="price_field">   
    <label class="input">Price</label>   
    <%= f.text_field :price %>   
  </div>   
  
  <div class="container">   
    <label>State</label>   
    <%= f.select :state, options_for_select(['drafted', 'confirmed','delivered']), { prompt: true, selected: 'drafted' }, required: true %>    
    <div>   
      <%= link_to 'Back', { controller: 'purchase_order', action: 'index'} %>   
      <%= f.submit 'Update' %>  
      <% end %> 
    </div> 
  </div> 
</div>  
<div class="container" id="search1">
  <%= form_tag(search_medicines_path, method: 'get', remote: true, 
  class: 'navbar-form navbar-left') do %>  
  <div class="input-group">  
    <%= text_field_tag :search, nil, required: true, id: 'search_medicines', placeholder: "Search by Description..." %>
    <%= hidden_field_tag :purchase_order_sequence_num, @purchase_order.sequence_num %> 
    <div class="input-group-btn">  
      <%= submit_tag "Submit", class: 'btn btn-info glyphicon glyphicon-search',name: nil %>  
    </div> 
  </div>  
  <% end %> 
</div> 
<div class="container" id="display_results"></div>
