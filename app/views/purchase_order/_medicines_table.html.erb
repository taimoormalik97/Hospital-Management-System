<% if @purchase_order.medicines.present? %> 
  <table  class="table">   
    <thead >   
      <tr>   
        <th><%= t('medicine.name_label') %></th>   
        <th><%= t('medicine.price_label') %></th>   
        <th><%= t('medicine.quantity_label') %></th>   
      </tr>   
    </thead>   
    <tbody>  
    <% @purchase_order.purchase_details.each do |detail| %>   
      <tr>   
        <td><%= link_to detail.medicine.name, medicine_path(detail.medicine) %></td>   
        <td><%= detail.medicine.price %></td>   
        <td><%= detail.quantity %></td>   
      </tr>  
    <% end %>  
  </tbody>   
</table>
<% else %>
  <strong><%= t('medicine.none') %></strong>
<% end %>