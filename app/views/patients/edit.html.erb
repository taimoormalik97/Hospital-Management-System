<%= form_for @patient, url: {action: :update} do |f| %>
	<div class="container  pt-3"> 
		<div class="card">
			<div class="card-header p-3 container-fluid">
				<div class="row">
					<h3 class="col-md-9">Edit Patient</h3> 
					<div class="col-md-3 float-right">
			  		<%= f.submit 'Update' , class: "btn btn-primary "%>   
						<%= link_to 'Cancel', { controller: 'patients', action: 'show'} , class: "btn btn-secondary ", style:"margin-left: 1em"%>
					</div>
				</div>
			</div>
			<div class="card-body">     
				<p>   
					<div class="form-group">   
						<label>Patient Name</label>   
						<%= f.text_field :name, class:"form-control"%>   
					</div>    
					<div class="form-group"> 
						<label>Email</label>   
						<%= f.email_field :email, class:"form-control"%>   
					</div>   
					<div class="form-group">   
						<label>Password</label>   
						<%= f.password_field :password, class:"form-control" %>
					</div> 
					<div class="form-group">  
				 		<label>Date of Birth</label>   
						<%= f.date_field :dob, class:"form-control"%>     
					</div> 
					<div class="form-group">   
						<label>Family History</label>   
						<%= f.text_field :family_history, class:"form-control"%>   
					</div> 
					<div class="form-group">   
						<label>Gender</label>   
						<%=f.select :gender, options_for_select(["Male", "Female", "Other"]) , class:"form-control float-right"%>   
					</div>     
				</p> 
			</div>   	
		</div>   	
	</div> 
<% end %>   
