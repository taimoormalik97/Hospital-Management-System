<%= render "users/shared/error_messages", resource: resource %> 
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container w-50 card_center"> 
    <div class="card card-border">
      <div class="card-body m-5">
        <div class="text-center p-3 container-fluid">
          <div class="row">
            <h1 class="col-md-12">
              <%= t('guest.welcome_msg') %>
            </h1> 
          </div>
        </div>
        <div class="pt-25">
          <div class="separator"></div>
        </div>
        <div class="row mt-3 ml-2 font-for-card">
          <h3 ><%= t('guest.signin') %></h3>
        </div>
        <div class="row ml-0 font-for-card">
          <h5 class="px-2 pt-2 msg-color"> <%= t('guest.sigin_to_your_account') %>
          </h5>
        </div>
        <p>
          <div class="row p-2 mr-3">
            <label class="col-3"><%= t('guest.profile.email') %></label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", value: params[:email], required: true, class: "form-control col-9" %>
          </div>
          <div class="row p-2 mr-3">
            <label class="col-3"><%= t('guest.profile.password') %></label>
            <%= f.password_field :password, autocomplete: "current-password", required: true, class: "form-control col-9" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group form-check pt-2">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </p>
        <div class="row">
          <div class="col-md-12 text-center">
            <%= f.submit t('guest.login'), class: "btn hover-button button-width" %>
          </div>
        </div>
        <div class="row mt-3">
          <div class="text-center col-md-12">
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
