<%= form_for @doctor, url: {action: :update} do |f| %>
	<div class="container  pt-3"> 
		<div class="card">
			<div class="card-header p-3 container-fluid">
				<div class="row">
					<h3 class="col-md-9">Edit Doctor</h3> 
					<div class="col-md-3 float-right">
			  		<%= f.submit 'Update' , class: "btn btn-primary "%>   
						<%= link_to 'Cancel', { controller: 'doctors', action: 'show'} , class: "btn btn-secondary ", style:"margin-left: 1em"%>
					</div>
				</div>
			</div>
			<div class="card-body">     
				<p>   
					<div class="form-group">   
						<label>Doctor Name</label>   
						<%= f.text_field :name, class:"form-control" %>   
					</div>   
					<div class="form-group">   
						<label>Email</label>   
						<%= f.email_field :email, class:"form-control" %>   
					</div>   
					<div class="form-group">   
						<label>Password</label>   
						<%= f.password_field :password, class:"form-control"  %>
					</div> 
					<div class="form-group">   
						<label>Registration no.</label>   
						<%= f.text_field :registration_no, class:"form-control" %>   
					</div> 
					<div class="form-group">   
						<label>Speciality</label>   
						<%= f.text_field :speciality, class:"form-control" %>   
					</div> 
					<div class="form-group">   
						<label>Consultancy Fee</label>   
						<%= f.text_field :consultancy_fee, class:"form-control" %>   
					</div>     
				</p> 
			</div>   	
		</div>   	
	</div> 
<% end %>   