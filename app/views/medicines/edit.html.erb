<%= form_for @medicine do |f| %> 
  <div class="container  pt-3"> 
      <div class="card">
        <div class="card-header p-3 container-fluid">
          <div class="row">
            <h3 class="col-md-9">
              Edit Medicine
            </h3> 
          </div>
        </div> 
        <div class="card-body"> 
          <p><%= flash[:error] %></p>   
          <p>   
            <div class="form-group">   
              <label>Medicine Name</label>   
              <%= f.text_field :name, :required => true, class: "form-control" %>   
            </div>   
            <div class="form-group">   
              <label>Price</label>   
              <%= f.number_field :price, :required => true, class: "form-control" %>   
            </div>   
            <div class="form-group">   
              <label>Quantity</label>   
              <%= f.number_field :quantity, :required => true, class: "form-control"  %>
            </div>     
          </p>
        </div> 
      </div>
      <div class="card-footer p-3 container-fluid">
        <div class="row d-flex justify-content-md-end">
          <div class="col-md-3 d-flex justify-content-md-end">
            <%= link_to 'Back', { controller: 'medicines', action: 'index'}, class: "btn btn-secondary" %>   
            <%= f.submit 'Update', class: "btn btn-primary"%> 
          </div>
        </div>
      </div>    
    </div>    
  </div>
<% end %>   
