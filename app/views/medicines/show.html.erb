<div class="container  pt-3"> 
    <div class="card">
      <div class="card-header p-3 container-fluid">
        <div class="row">
          <h3 class="col-md-8"><%= @medicine.name %></h3> 
          <div class="col-md-4 d-flex justify-content-md-end"> 
            <%= link_to 'Back', { controller: 'medicines', action: 'index'}, class: "btn btn-secondary " %>
            <%= link_to 'Edit', edit_medicine_path(@medicine), class: "btn btn-primary "%> 
          </div>
        </div>
      </div>
      <div class="card-body">
      <dl class="row">
        <dt class="col-sm-2">  
          <label>Name</label>
        </dt>
        <dd class="col-sm-9">   
          <%=@medicine.name %>   
        </dd>
        <dt class="col-sm-2">  
          <label>Price</label>   
        </dt>
        <dd class="col-sm-9">   
          <%=@medicine.price%>   
        </dd>
        <dt class="col-sm-2">  
          <label>Quantity</label>
        </dt>
        <dd class="col-sm-9">   
          <%=@medicine.quantity %>   
        </dd>
      </dl>
    </div>    
  </div>   
</div> 