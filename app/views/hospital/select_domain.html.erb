<div class="container  pt-3"> 
  <div class="card">
    <div class="card-header p-3 container-fluid">
      <div class="row">
        <h3 class="col-md-9">
          Choose Your Hospital
        </h3> 
      </div>
    </div>
    <div class="card-body">  
      <% @selected_users.each do |user| %>
        <a class="select_domain_hover" href = <%= new_user_session_url(email: user.email, subdomain: user.hospital.sub_domain) %>>
          <div class="container  pt-3"> 
            <div class="select_domain" class="card">
              <div class="card-body" >
                <h5 class="card-title"><%= user.hospital.name %></h5>
              </div>
            </div>
          </div>
        </a>
      <% end %>
    </div>
  </div>
</div>
