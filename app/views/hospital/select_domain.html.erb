<div class="box">
  <div class="wrapper">
    <div class="container pt-3 w-50 card_center"> 
      <div class="card">
        <div class="card-header p-3 container-fluid">
          <div class="row">
            <h3 class="col-md-9">
              <%= t('guest.select_hospital') %>
            </h3> 
          </div>
        </div>
        <div class="card scroll_domain">
          <div class="card-body table-responsive">
            <% @selected_users.each do |user| %>
              <a class="select_domain_hover" href= <%= new_user_session_url(email: user.email, subdomain: user.hospital.sub_domain) %>>
                <div class="container pt-3"> 
                  <div class="select_domain" class="card">
                    <div class="card-body" >
                      <h5 class="card-title"><%= user.hospital.name %></h5>
                    </div>
                  </div>
                </div>
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
